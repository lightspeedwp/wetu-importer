{
	"mcp.enableAllModels": true,
	"mcp.autoSelectModel": true,
	"mcp.modelPreference": "auto",
	"chat.agentFilesLocations": {
		"**/.github/agents": true
	},
	"chat.modeFilesLocations": {
		"**/.github/chatmodes": true
	},
	"chat.promptFilesLocations": {
		"**/.github/prompts": true
	},
	"chat.instructionsFilesLocations": {
		"**/.github/instructions": true
	},
	"files.associations": {
		"*.chatmode.md": "markdown",
		"*.instructions.md": "markdown",
		"*.prompt.md": "markdown",
		"*.agent.md": "markdown"
	},
	"github.gitAuthentication": true,
	"github.copilot.enable": {
		"*": true,
		"php": true,
		"javascript": true,
		"css": true,
		"scss": true,
		"json": true,
		"markdown": true
	},
	"copilot.enable": {
		"*": true,
		"php": true,
		"javascript": true,
		"css": true,
		"scss": true,
		"json": true,
		"markdown": true
	},
	"git.autofetch": true,
	"git.confirmSync": true,
	"github.authenticate": "on",
	"files.eol": "\n",
	"files.insertFinalNewline": true,
	"files.trimTrailingWhitespace": true,
	"[markdown]": {
		"files.trimTrailingWhitespace": false
	},
	"[php]": {
		"editor.formatOnSave": true,
		"editor.tabSize": 4,
		"editor.insertSpaces": false
	},
	"[javascript]": {
		"editor.formatOnSave": true,
		"editor.tabSize": 2
	},
	"[css]": {
		"editor.formatOnSave": true,
		"editor.tabSize": 2
	},
	"[json]": {
		"editor.formatOnSave": true,
		"editor.tabSize": 2
	},
	"terminal.integrated.logLevel": "trace",
	"developer.reload": true,
	"extensions.logLevel": "trace",
	"npm.logLevel": "verbose",
	"task.verboseLogging": true,
	"output.smartScroll.enabled": true
}
